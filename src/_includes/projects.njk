{% for group in projects %}
<h2>{{ group.title }}</h2>
<p>{{ group.description }}
<dl>
  {% for project in group.projects %}
  <dt><a href="{{ project.url }}">{{ project.title }}</a></dt>
  <dd>
    {{ project.description }}
    {% if project.repo %}<a href="https://github.com/bgauslin/{{ project.repo }}">Repo</a>{% endif %}
  </dd>
  {% endfor %}
</dl>
{% endfor %}