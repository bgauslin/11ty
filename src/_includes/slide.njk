{# JSON response for a single slide. #}
{
  "title": "{{ title }}",
  "copy": "{{ content | safe | trim | replace("\n", "") -}}",
  "media": {
    {%- if images %}
    "images": [
    {%- for image in images %}
      "{{- image }}"{%- if not loop.last %},{% endif -%}
    {% endfor %}
    ]
    {%- endif -%}
    {% if images and publication %},{% endif %}
    {% if publication -%}
    "publication": {
      "title": "{{ publication.title }}",
      "publisher": "{{ publication.publisher }}",
      "publicationDate": "{{ publication.publication_date }}",
      "photo": "{{ publication.photo }}",
      "file": "{{ publication.file }}"
    }
    {%- endif %}
  }
}