{#- JSON response for all Powers Of Ten content. -#}
{
  "title": "{{ title }}",
  "content": "{{ content | safe | trim | replace("\n", "") -}}",
  "scenes": [
  {%- for scene in collections.ten %}
    {
      "power": "{{ scene.data.power }}",
      "distance": [
      {%- for value in scene.data.distance %}
        "{{ value }}"{% if not loop.last %},{% endif %}
      {%- endfor %}
      ],
      "image": "{{ scene.data.image }}",
      "content": "{{ scene.data.content | safe | trim | replace("\n", "") -}}"
    }
  {%- if not loop.last%},{% endif %}
  {%- endfor %}
  ]
}
