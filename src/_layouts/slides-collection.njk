---
layout: base
view: slides
---
{%- set domain = 'https://assets.gauslin.com' -%}
{%- set imagePath = '/images/slides2023/' -%}

{%- macro renderImage(image, slug) %}
  {%- set imageUrl = domain + imagePath + slug + '/' + image.src %}
  {%- set small = imageUrl + '@small.webp' %}
  {%- set medium = imageUrl + '@medium.webp' %}
  {%- set large = imageUrl + '@large.webp' %}
  
  {%- set orientation %}
    {%- if image.orientation %}
      {{- image.orientation }}
    {%- elif image.height and image.width %}
      {{- 'portrait' if (image.height > image.width) else 'landscape' }}
    {%- endif %}
  {%- endset %}
  <img
    alt=""
    data-orientation="{{ orientation }}"
    loading="lazy"
    src="{{ medium }}"
    srcset="{{ small }} 600w, {{ medium }} 900w, {{ large }} 1200w"
    sizes="(min-width: 1440px) 900px, 100vw">
{%- endmacro -%}

<header>
  <h1>{{ title }}</h1>
  {{ content | safe }}
</header>

<ol>
{%- for item in collections[slug] %}
  <li id="{{ item.data.slug }}">
	  <figure>
      <h2>{{ item.data.title }}</h2>

	    <div data-images="{{ item.data.images | length }}">
	    {% for image in item.data.images %}
	      {{ renderImage(image, slug) }}
	    {% endfor %}
	    </div>
	
	    <figcaption>
        {{ item.data.content | safe }}
	    </figcaption>
	  </figure>    
  </li>
{%- endfor %}
</ol>
